/*底部表格样式*/
.hide-table
  width: 100%
  position:fixed
  padding-left: 180px
  z-index: 200
  bottom: -300px
  .main
    width: 100%
    height: 400px
    padding: 10px
    box-shadow: 0 10px 10px 0 rgba(0,0,0,0.8)
    .table-tips
      width: 100%
      height: 50px
      line-height: 50px
      border-radius: 5px 5px 0 0
      background: #ffae00
      border-bottom: 1px solid #c5c5c5
      text-align: center
      cursor: pointer
    .table-cot
      width: 100%
      height: 350px
      overflow: auto
      background:#eaeaea
      padding-bottom: 30px
      table
        width: 100%
        border-collapse:collapse
        font-size: 14px
        thead,tbody tr
          height: 35px
          line-height: 35px
          font-weight: normal
          border-bottom: 1px solid #ccc
        tbody tr td
          text-align: center

//用于设置表格的边框合并为一个单一的边框
.hide-table .main .table
  border-collapse: collapse

.comp
  border-right: 1px solid #ccc
