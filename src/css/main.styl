/*主外层模块*/
#container
   background-image: -moz-linear-gradient( 90deg, rgb(8,7,26) 0%, rgb(26,25,44) 55%, rgb(44,43,61) 100%)
   background-image: -webkit-linear-gradient( 90deg, rgb(8,7,26) 0%, rgb(26,25,44) 55%, rgb(44,43,61) 100%)
   background-image: -ms-linear-gradient( 90deg, rgb(8,7,26) 0%, rgb(26,25,44) 55%, rgb(44,43,61) 100%)
   width:100%
   min-height:1600px
   position:relative

#loading
  position: fixed
  width:100%
  top:30vh
  height:20px
  bottom:0
  z-index:500
  left:0

/*左边主导航模块*/
#left
  width:180px
  height:100%
  position:fixed
  top:0
  left:0
  background:#fff
  z-index:400
  > .logo
    width: 180px
    height: 65px
    margin-bottom: 10px
    background:url(../images/logo.png) no-repeat
    margin:10px 0 10px 0
    background-size:180px 65px
    > a
      width: 180px
      height: 65px
      display: block
      text-indent: -300em
  > .main-menu
    height:auto
    overflow:hidden
    > li
      width:180px
      height:60px
      text-align:center
      padding:10px 0 0 0
      margin-top:10px
      float:left
      position:relative
      font-size:18px
      line-height:40px
      &:hover
        background:#f9f6e8
      .fa
        margin-right:5px
        line-height:40px
      > a
        display:block
        width:180px
        height:60px
        color:#000 !important
        text-decoration:none
        &:hover
          color:#000 !important
          text-decoration:none
      &.active
        background:#ffd50f
        -moz-box-shadow: 2px 0 4px #aeaeae
        -webkit-box-shadow: 2px 0 4px #aeaeae
        box-shadow: 2px 0 4px #aeaeae
  .triangle
    border-top:10px solid transparent
    border-bottom:10px solid transparent
    border-right:10px solid #000
    position:absolute
    top:20px
    right:0

/*右边模块及信息顶部模块*/

#right
  padding-left:180px
  position:relative
  right:0
  top:0
  z-index:100
  padding-bottom:120px
  .top
    width:100%
    height:70px
    background:#561fa0
    box-shadow: 0px 5px 10px 0px rgba(0, 0, 0, 0.3)
    position: fixed
    z-index:300
    left:0
    padding-left: 180px
    top: 0
    .col
      height: 70px
    .exit-system
      text-align: right
    .col-5
      text-align: center
    span
      line-height:70px
      padding-right:10px
      color: #d2b4fa
    .col-2
      text-align: center
      >strong
        font-size:20px
        white-space:nowrap
        overflow:hidden
        text-overflow:ellipsis
        color:#fff
        font-weight: bolder
        height: 70px
        line-height: 70px
        word-spacing: 0.3em
        letter-spacing: 0.3em
    .message
      line-height:70px
      font-size:18px
      display:inline-block
    .exit
      display:inline-block
      border-radius:5px
      padding:5px 15px
      text-align:center
      background:#AC2F31
      color:#fff
      font-size:14px
      margin-top:18px
      cursor:pointer
      -webkit-transition: 0.5s
      transition:  0.5s
      -o-transition:  0.5s
      -moz-transition:  0.5s
      border-bottom:3px solid #881315
      min-height: 30px
      height: 30px
      >i
        margin-right:5px
    .exit:hover
      background:#881315


